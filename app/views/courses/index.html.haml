.content
  .row
    .col-md-12
      - if @courses.present?
        .container
          - @courses.each do |course|
            .col-md-3
              .thumbnail
                - if user_signed_in?
                  = link_to course.title.humanize, course_path(course)
                %br
                = image_tag course.picture.admin_thumb
                - if current_user.try(:banned_in?, course)
                  %p You are deducted
                - else
                  %br
                  = link_to 'Participants', course_participants_path(course)
        .row
          .col-md-offset-5
            = paginate @courses
      - else
        %h2 No courses
