.panel.panel-default.devise-bs.container.col-md-12
	.panel-heading
		%h1 Update profile data
	.panel-body
		=simple_form_for current_user, url: users_profile_path, html: { class: 'form-horizontal' } do |f|
			.form-group			
				= f.input :email, class: "form-control"
				= f.input :password
				= f.input :password_confirmation

				= f.simple_fields_for :profile do |pf|
					.form-inputs
						= pf.input :first_name, class: "form-control"
					.form-inputs
						= pf.input :last_name, class: "form-control"
					.form-actions
						= f.submit 'Save'
